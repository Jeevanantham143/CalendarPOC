<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".CalendarActivity">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llday1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/daytv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/datetv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="01"
                android:textAlignment="center" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llday2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/daytv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tue"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/datetv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="02"
                android:textAlignment="center" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llday3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/daytv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wed"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/datetv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="03"
                android:textAlignment="center" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llday4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/daytv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thu"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/datetv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="04"
                android:textAlignment="center" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llday5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/daytv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fri"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/datetv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="05"
                android:textAlignment="center" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llday6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/daytv6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sat"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/datetv6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="06"
                android:textAlignment="center" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/check1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sort"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/check2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filter"
                android:textAlignment="center" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>